/* publish.wxss */

.scrollView {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.coverPic {
  width: 99.5%;
  height: 400rpx;
  border-style: dashed;
  border-width: 2rpx;
  border-color: #ddd;
  text-align: center;
}

.coverImage {
  width: 100%;
  height: 100%;
  display: none;
}

.addCoverImage {
  width: 50rpx;
  height: 50rpx;
  margin-top: 150rpx;
}

.coverImageTip {
  font-size: 14px;
  color: #ddd;
  display: block;
}

.title {
  padding: 20rpx;
  font-size: 14px;
}

.detail {
  min-height: 400rpx;
  padding: 20rpx;
  font-size: 12px;
}

.detailLong {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 12px;
  color: #bbb;
  text-align: right;
  padding-right: 20rpx;
}

.images {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  line-height: 120rpx;
}

.singleView {
  width: 120rpx;
  height: 120rpx;
  margin-left: 10rpx;  
  position: relative;
}

.singleImg {
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
}

.addImg {
  width: 60rpx;
  height:60rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}

.addImgText {
  width: 100%;
  text-align: center;
  font-size: 14px;
  margin-top: 20rpx;
}

.addImgTip {
  width: 100%;
  text-align: center;
  font-size: 10px;
  color: #bbb;
  margin-bottom: 20rpx;  
}

.deleteImg {
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  right: 30rpx;
  top: 15rpx;
}

.layout {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  padding: 20rpx;
}

.tip {
  float: left;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
  float: right;
  margin-right: 50rpx;
}

.timeTime {
  width: 10%;
  height: 100%;
  float: right;
  margin-right: 20rpx;
  text-align: right;
}

.divide {
  width: auto;
  height: 100%;
  float: right;
